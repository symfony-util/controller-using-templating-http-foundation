{
    "name": "symfony-util/controller-using-templating-http-foundation",
    "description": "Controller which renders a template and returns a response (HttpFoundation)",
    "keywords": ["controller", "symfony", "snowyowl"],
    "homepage": "https://github.com/symfony-util/controller-using-templating-http-foundation",
    "license": "ISC",
    "authors": [
        {"name": "Jean-bernard Addor"},
        {"name": "Community", "homepage": "https://github.com/symfony-util/controller-using-templating-http-foundation"}
    ],
    "require": {
        "symfony/http-foundation": "^2.0 || ^3.0 || ^4.0",
        "symfony/templating": "^2.0 || ^3.0 || ^4.0"
    },
    "require-dev": {
        "symfony/twig-bridge": "^2.0 || ^3.0 || ^4.0",
        "symfony/var-dumper": "^2.0 || ^3.0 || ^4.0",
        "symfony-util/coding-standards-fixer": "2017.05.x-dev",
        "twig/twig": "^1.0 || ^2.0"
    },
    "suggest": {
        "symfony-util/controller-using-templating-http-foundation-http-kernel": "To use the right dependencies to be able to call the provided controller from Symfony (HttpKernel)"
    },
    "autoload": {
        "psr-4": {
            "SymfonyUtil\\Controller\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": ["tests/"]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.3.x-dev"
        }
    },
    "scripts": {
        "where": [
            "@php scripts/install-manager.php --ansi -vvv -- where"
        ],
        "php-cs-fixer:diff": [
            "@composer global require --dev symfony-util/coding-standards-fixer:master-dev@dev friendsofphp/php-cs-fixer",
            "@where php-cs-fixer",
            "php-cs-fixer --version",
            "php-cs-fixer fix --diff --dry-run -vvv --using-cache=no",
            "@composer global remove --dev symfony-util/coding-standards-fixer friendsofphp/php-cs-fixer"
        ],
        "phpstan": [
            "@composer require --dev phpstan/phpstan",
            "phpstan --version",
            "@composer remove --dev phpstan/phpstan"
        ],
        "phpunit": [
            "@composer global require --dev phpunit/phpunit",
            "@composer global show",
            "phpunit --version",
            "which phpunit",
            "@composer global remove --dev phpunit/phpunit"
        ],
        "security:check": [
            "@composer global require --dev sensiolabs/security-checker",
            "@where security-checker",
            "security-checker --version",
            "security-checker security:check --end-point=http://security.sensiolabs.org/check_lock",
            "@composer global remove --dev sensiolabs/security-checker"
        ]
    }
}

